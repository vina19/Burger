<div class="jumbotron jumbotron-fluid text-center text-black" id="burger-intro">
    <div class="display-4">
        <img src="/assets/img/cute-burger-cartoon-icon-illustration-food-icon-concept-isolated-flat-cartoon-style_138676-1437.jpg">
        <p class="lead">Eat-Da-Burger!</p>
    </div>
</div>

<div class="container">
    <div class="row" id="burgers">
        <div class="col-md-6 burgers">
            <h2>Ready Burgers to be devoured:</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row" id="devoured-burgers">
        <div class="col-md-6 devoured">
            <h2>Devoured Burgers:</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center submit-burger">
                <h2>Insert Burger Here:</h2>
                <form class="create-form">
                    <div class="form-group">
                        <input type="text" id="burger-name" name="burger-name">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                </br>
                <p>Enter a burger you want to eat Click the "Submit" button.</p>
            </div>
        </div>
    </div>
</div>